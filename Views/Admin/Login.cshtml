@model MusicCloud.Models.Admin
@{
    ViewBag.Title = "Login";
    Layout = null;
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
}
<body style = "background-color: #000; ">
    <head>
        <title></title>
        <script src="~/Scripts/jquery-1.8.2.js"></script>
        <script src="~/Scripts/jquery.validate.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    </head>
        <div class="container">
            <div class="row">
                <div class="col-sm-6 col-md-4 col-md-offset-4">
                    <h1 class="text-center login-title" style="margin-top:70px; margin-left:20px; margin-bottom:30px;color: #666;font-family:'Lithos Pro'">Admin Panel</h1>
                    <div class="account-wall">
                        <img class="profile-img" src="~/Images/AdminPhoto.png" alt="">
                        @using (Html.BeginForm("AdminPanel", "Admin", FormMethod.Post, new { @class = "form-signin" }))      
                        {
                            @Html.LabelFor(m => m.Name)
                            @Html.TextBoxFor(m => m.Name, null, new { @class = "form-control", @placeholder = "Name", @required = "true" })
                            @Html.ValidationMessageFor(m => m.Name);
                            @Html.LabelFor(m => m.Password)
                            @Html.TextBoxFor(m => m.Password, null, new { @class = "form-control", @placeholder = "Password", @required = "true" })
                            @Html.ValidationMessageFor(m => m.Password);
                            <button style="margin-top:10px" class="btn btn-lg btn-primary btn-block" type="submit">
                                Sign in
                            </button>
                            @Html.ValidationMessage("ll")
                        }   
                        @Html.ActionLink("Back to Homepage","Index","Home",null,null); 
                    </div>
                </div>
            </div>
        </div>
</body>
