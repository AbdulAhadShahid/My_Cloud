@{
    ViewBag.Title = "Contact";
}
<div id="contact" class="spacer">
    <div class="contactform center">
        <h2 style="color: #ccc;margin-top:10px;margin-bottom:10px"><span class="glyphicon glyphicon-envelope"></span> Contact</h2>
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3 ">
                <h2 style="font-size: 23px; margin-bottom:20px;line-height:30px;font-family: 'Carrois Gothic',Arial,Helvetica;color: #ccc;">Get in touch or<br><b>Just say Hello!</b></h2>
                <form method="post" action="/Home/Contact">
                    <input type="text" placeholder="Name">
                    <input type="text" placeholder="Email">
                    <textarea rows="5" placeholder="Message"></textarea>
                    <button type="submit" class="btn btn-warning bgcolor">Send</button>
                </form>
            </div>
        </div>

        <!-- map -->
        <div class="map clearfix">
            <div class="fb-like-box" data-href="https://www.facebook.com/MIC.Lhr.Pk?fref=ts" data-width="100%" data-colorscheme="light" data-show-faces="true" data-header="true" data-stream="false" data-show-border="true"></div>
        </div>
        <!-- map -->

    </div>
</div>