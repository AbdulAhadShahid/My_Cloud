@{
    ViewBag.Title = "Home";
}
<script src="~/Scripts/jquery-1.8.2.min.js" type="text/javascript"></script>
<!-- boostrap -->
<script src="~/Scripts/plugins.js" type="text/javascript"></script>
<script src="~/Scripts/script.js"></script>
<!-- overlay -->
<div class="container overlay" >
    <!-- blockblack -->
    <div class="blockblack">
        <!-- home banner starts -->
        <div id="home" class="homeinfo">
            <div class="row">
                <div class="col-sm-6 col-xs-12">
                    <div class="fronttext">
                        <h2 class="bgcolor  animated fadeInUpBig"><span class="glyphicon glyphicon-headphones"></span> Music Cloud</h2><br>
                        <p class=" animated fadeInUp">Hear the world’s sounds. There are other and natural causes tending toward a diminution of population, but nothing contributes so greatly to this end as the fact that no male or female Martian is ever voluntarily without a weapon of destruction. Millions of other artists share their tracks on MusicCloud</p>
                    </div>
                </div>

                <div class="col-sm-5 col-xs-12 col-sm-offset-1">
                    <div class="player">
                        <img src="~/Images/dj.png" class="graphics hidden-xs  animated fadeInRightBig" alt="dj" />
                        <div style="background-color:HighlightText">
                            <h2 style="font-family:'lithos pro'; padding-top:10px;padding-left:10px">Bruno Mars - Lighters</h2>
                            <audio style="margin-top:20px;padding-left:10px" controls>
                                <source src="~/Songs/Lighters.mp3" type="audio/ogg">
                                Your browser does not support the audio element.
                            </audio>
                        </div>
                        </div>
                </div>
            </div>
        </div>
        <!-- home banner ends -->

        <!-- latest release starts-->
        <div id="album" class="releases spacer">
            <h3><span class="glyphicon glyphicon-music"></span> Top Singers</h3>
            <div class="row">
                <div class="col-sm-3 col-xs-12"><div class="album"><img src="~/Images/0.jpg" class="img-responsive" alt="music theme" /><div class="albumdetail"><h5>Akcent</h5><a href="@Url.Action("ViewAlbum", "Home", new { name = "Akcent"})" class="listen" data-toggle="modal" data-target="#albumdetail"><span class="glyphicon glyphicon-headphones"></span> View Album</a></div></div></div>

                <div class="col-sm-3 col-xs-12"><div class="album"><img src="~/Images/1.jpg" class="img-responsive" alt="music theme" /><div class="albumdetail"><h5>Enrique</h5><a href="@Url.Action("ViewAlbum", "Home", new { name = "Enrique"})" class="listen" data-toggle="modal" data-target="#albumdetail"><span class="glyphicon glyphicon-headphones"></span> View Album</a></div></div></div>

                <div class="col-sm-3 col-xs-12"><div class="album"><img src="~/Images/2.jpg" class="img-responsive" alt="music theme" /><div class="albumdetail"><h5>Edward Maya</h5><a href="@Url.Action("ViewAlbum", "Home", new { name = "Edward Maya"})" class="listen" data-toggle="modal" data-target="#albumdetail"><span class="glyphicon glyphicon-headphones"></span> View Album</a></div></div></div>

                <div class="col-sm-3 col-xs-12"><div class="album"><img src="~/Images/3.jpg" class="img-responsive" alt="music theme" /><div class="albumdetail"><h5>Rihanna</h5><a href="@Url.Action("ViewAlbum", "Home", new { name = "Rihanna"})" class="listen" data-toggle="modal" data-target="#albumdetail"><span class="glyphicon glyphicon-headphones"></span> View Album</a></div></div></div>

                <div class="col-sm-3 col-xs-12"><div class="album"><img src="~/Images/4.jpeg" class="img-responsive" alt="music theme" /><div class="albumdetail"><h5>Chris Brown</h5><a href="@Url.Action("ViewAlbum", "Home", new { name = "Chris Brown"})" class="listen" data-toggle="modal" data-target="#albumdetail"><span class="glyphicon glyphicon-headphones"></span> View Album</a></div></div></div>

                <div class="col-sm-3 col-xs-12"><div class="album"><img src="~/Images/5.jpg" class="img-responsive" alt="music theme" /><div class="albumdetail"><h5>Britney Spears</h5><a href="@Url.Action("ViewAlbum", "Home", new { name = "Britney Spears"})" class="listen" data-toggle="modal" data-target="#albumdetail"><span class="glyphicon glyphicon-headphones"></span> View Album</a></div></div></div>

                <div class="col-sm-3 col-xs-12"><div class="album"><img src="~/Images/6.jpg" class="img-responsive" alt="music theme" /><div class="albumdetail"><h5>Bruno Mars</h5><a href="@Url.Action("ViewAlbum", "Home", new { name = "Bruno Mars"})" class="listen" data-toggle="modal" data-target="#albumdetail"><span class="glyphicon glyphicon-headphones"></span> View Album</a></div></div></div>

                <div class="col-sm-3 col-xs-12"><div class="album"><img src="~/Images/7.jpg" class="img-responsive" alt="music theme" /><div class="albumdetail"><h5>Eminem</h5><a href="@Url.Action("ViewAlbum", "Home", new { name = "Eminem"})" class="listen" data-toggle="modal" data-target="#albumdetail"><span class="glyphicon glyphicon-headphones"></span> View Album</a></div></div></div>
            </div>
        </div>
        <!-- latest release ends-->

    </div>
    <!-- blockblack -->

</div>
<!-- overlay -->
<!-- background slider -->
<div id="myCarousel" class="carousel slide hidden-xs">
    <div class="carousel-inner">
        <div class="active item"><img src="~/Images/back1.jpg" alt="" /></div>
        <div class="item"><img src="~/Images/back2.jpg" alt="" /></div>
        <div class="item"><img src="~/Images/back3.jpg" alt="" /></div>
    </div>
</div>